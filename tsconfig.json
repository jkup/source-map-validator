{
  "compilerOptions": {
    "module": "nodenext",
    "target": "ES2020",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
